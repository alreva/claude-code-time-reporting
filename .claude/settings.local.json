{
  "permissions": {
    "allow": [
      "SlashCommand(/build)",
      "SlashCommand(/build-api)",
      "SlashCommand(/build-mcp)",
      "SlashCommand(/test)",
      "SlashCommand(/test-api)",
      "SlashCommand(/test-mcp)",
      "SlashCommand(/run-api)",
      "SlashCommand(/run-mcp)",
      "SlashCommand(/stop-api)",
      "SlashCommand(/stop-mcp)",
      "SlashCommand(/ef-migration)",
      "SlashCommand(/db-start)",
      "SlashCommand(/db-stop)",
      "SlashCommand(/db-restart)",
      "SlashCommand(/db-logs)",
      "SlashCommand(/db-psql)",
      "SlashCommand(/status)",
      "SlashCommand(/deploy)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git status:*)",
      "Bash(git log:*)",
      "Bash(git diff:*)",
      "Bash(psql:*)",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(pwd:*)",
      "Bash(mkdir:*)",
      "Bash(chmod:*)",
      "Bash(.claude/hooks/db-guard.sh:*)",
      "Bash(.claude/hooks/project-status.sh:*)",
      "WebSearch",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:microsoft.com)",
      "WebFetch(domain:postgresql.org)",
      "WebFetch(domain:stackoverflow.com)",
      "Read(**)"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash.*",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/check-dotnet-commands.sh"
          }
        ]
      }
    ]
  },
  "model": "claude-sonnet-4-5"
}
